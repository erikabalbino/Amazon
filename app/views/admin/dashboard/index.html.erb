<h1> ✧ Admin Dashboard ✧ </h1>
<br />
<h2> Number of Users:  <%= @countUsers %> </h2>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Admin?</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
            
      </tr>
    <% end %>
  </tbody>

</table>

<hr>

<h2> Number of Products:  <%= @countProducts %> </h2>
<h3> Number of Reviews:  <%= @countReviews %> </h3>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to(
                product.title,
                product_path(product.id),
            ) %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<hr>


