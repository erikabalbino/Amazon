<h1  class="mb-4"> ✧ All Products from tag: <%= @tag.name %> ✧ </h1>

<ul class="decoration">
  <% @products.each do |product| %>
    
    <div style="margin-bottom: 10px;">
        <li>
            <%= link_to(
                product.title,
                product_path(product)
            ) %>
            <hr>
        </li>
    </div>
  <% end %>
</ul>