<%= form_for(@product) do |f| %>

    <% if @product.errors.present? %>
        <%= @product.errors.full_messages.join(',') %>
    <% end %>

    <div>
        <%= f.label(:title) %>
        <%= f.text_field(:title) %>
    </div>

    <div>
        <%= f.label(:description) %>
        <%= f.text_area(:description) %>
    </div>

    <div>
        <%= f.label(:price) %>
        <%= f.number_field(:price) %>
    </div>

    <%= f.submit " Submit" %>

<% end %>